{
  "printWidth": 120,
  "singleQuote": false,
  "tabWidth": 2,
  "bracketSpacing": true,

  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "explicitTypes": "preserve",
        "semi": true,
        "trailingComma": "all"
      }
    },
    {
      "files": ["*.ts", "*.json", "*.tsx"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "explicitTypes": "preserve",
        "semi": true,
        "trailingComma": "all"
      }
    }
  ]
}